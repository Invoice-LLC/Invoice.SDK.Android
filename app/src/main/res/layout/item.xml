<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content" android:layout_margin="20dp">

	<TextView
			android:text="Название"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:id="@+id/itemName"/>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		<TextView
				android:text="100"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/price"/>
		<TextView
				android:text="Руб."
				android:layout_width="match_parent"
				android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="1"
				android:layout_marginLeft="5dp"/>
	</LinearLayout>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		<TextView
				android:text="Количество"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/textView5"/>
		<TextView
				android:text="100"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/count" android:layout_weight="1"
				android:layout_marginLeft="5dp"/>
	</LinearLayout>
</LinearLayout>